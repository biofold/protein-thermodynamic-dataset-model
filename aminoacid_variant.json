{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/biofold/protein-thermodynamic-dataset-model/blob/master/aminoacid_variant.json",
  "title": "Amino Acid Variant Schema",
  "type": "object",
  "properties": {
    "uniprot_variant": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "wild_type_residue": { "type": "string" },
          "position": { "type": "integer" },
          "mutant_residue": { "type": "string" }
        },
        "required": ["wild_type_residue", "position", "mutant_residue"]
      }
    },
    "alt_sequence_variant": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "wild_type_residue": { "type": "string" },
          "position": { "type": "integer" },
          "mutant_residue": { "type": "string" }
        },
        "required": ["wild_type_residue", "position", "mutant_residue"]
      }
    },
    "pdb_variant": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "wild_type_residue": { "type": "string" },
          "position": { "type": "integer" },
          "altloc": { "type": "string" },
          "mutant_residue": { "type": "string" },
          "chain": { "type": "string" }
        },
        "required": ["wild_type_residue", "position", "mutant_residue", "chain"]
      }
    },
    "predicted_structure_variant": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "wild_type_residue": { "type": "string" },
          "position": { "type": "integer" },
          "mutant_residue": { "type": "string" },
          "chain": { "type": "string" }
        },
        "required": ["wild_type_residue", "position", "mutant_residue", "chain"]
      }
    }
  },
  "oneOf": [
    { "required": ["uniprot_variant"] },
    { "required": ["alt_sequence_variant"] },
    { "required": ["pdb_variant"] },
    { "required": ["predicted_structure_variant"] }
  ]
}

